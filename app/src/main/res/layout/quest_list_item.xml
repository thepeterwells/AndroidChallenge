<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_small"
    android:paddingStart="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_small"
    android:id="@+id/quest_list_item_container"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/touch_effect_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mobileBlue"
        android:textSize="@dimen/quest_list_text_size"
        android:id="@+id/quest_list_item_text"/>

</RelativeLayout>